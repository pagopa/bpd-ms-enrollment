{
  "request": {
    "method": "PUT",
    "urlPathPattern": "/bpd/citizens/(\\w*)",
    "bodyPatterns": [
      {
        "matchesJsonPath" : "$.timestampTC"
      }
    ]
  },
  "response": {
    "status": "200",
    "jsonBody": {
      "enabled": true,
      "fiscalCode": "{{request.path.[2]}}",
      "timestampTC": "{{jsonPath request.body '$.timestampTC'}}"
    },
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": [
      "response-template"
    ]
  }
}
