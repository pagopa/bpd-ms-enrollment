{
  "request": {
    "method": "PUT",
    "urlPathPattern": "/bpd/payment-instruments/(\\w*)",
    "bodyPatterns": [
      {
        "matchesJsonPath" : "$.activationDate"
      },
      {
        "matchesJsonPath" : "$.fiscalCode"
      }
    ]
  },
  "response": {
    "status": "200",
    "jsonBody": {
      "status": "ACTIVE",
      "fiscalCode": "{{jsonPath request.body '$.fiscalCode'}}",
      "hpan": "{{request.path.[2]}}",
      "activationDate": "{{jsonPath request.body '$.activationDate'}}"
    },
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": [
      "response-template"
    ]
  }
}
